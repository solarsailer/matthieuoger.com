---
layout: nil
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>Solar Sailer</title>

  <link href="http://solarsailer.net/atom.xml" rel="self"/>
  <link href="http://solarsailer.net/"/>

  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://solarsailer.net/</id>
  <author>
    <name>Matthieu Oger</name>
    <uri>http://solarsailer.net/about/</uri>
  </author>

  <!-- posts -->
  {% for post in site.posts %}
    {% unless post.category == 'meta' %}

      <entry>
        <title>{{ post.title }}</title>
        <link href="http://solarsailer.net{{ post.url }}/" />
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>http://solarsailer.net{{ post.id }}</id>
        <content type="html">
          {{ post.content | xml_escape }}
        </content>
        <author>
          <name>Matthieu Oger</name>
          <uri>http://solarsailer.net/about/</uri>
        </author>
      </entry>

    {% endunless %}
  {% endfor %}
</feed>
